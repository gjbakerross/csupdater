<div class="container-fluid">

<p id="notice" class="alert"><%= notice %></p>

<h1 class="display-3 mb-3 mx-auto">Projects</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title%>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit associated products', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new project', new_project_path, :class => "text-primary h5" %>


</div>