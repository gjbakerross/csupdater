.container

  = image_tag("default-creative-station.jpg", class: "mx-auto pt-4 d-block")
  
  %h1{:class => "display-4 mx-auto py-4"} Product Upload

  = form_with model: @product do |f|
    %table{:class => "w-100", :style => "border-collapse:separate; border-spacing:0 1rem"}
      %tr{:class => "form-group"}
        %td
          %h6 Product File
        %td 
          = f.file_field :product_csv, class: "form-control-file"
      %tr
        %td  
      %tr{:class => "form-group"}
        %td
        %td
          = f.submit "Save", class: "btn btn-primary" 

  %br
  %br
  = link_to 'All projects', projects_path, :class => "text-primary h5"   